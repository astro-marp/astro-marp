{
  "name": "astro-marp",
  "version": "0.1.2",
  "description": "Astro integration for Marp markdown presentations with content collections support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./dist/renderer/index.js": "./dist/renderer/index.js"
  },
  "files": [
    "dist",
    "src/themes"
  ],
  "keywords": [
    "astro",
    "astro-integration",
    "marp",
    "markdown",
    "presentations",
    "slides"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "astro": "^6.0.0"
  },
  "dependencies": {
    "@marp-team/marp-cli": "^4.2.3",
    "playwright": "^1.57.0",
    "rehype-mermaid": "^3.0.0",
    "rehype-parse": "^9.0.1",
    "rehype-stringify": "^10.0.1",
    "sharp": "^0.33.5",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "astro": "^v6.0.0-alpha.2",
    "eslint": "^9.39.1",
    "fast-check": "^3.23.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.20.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/astro-marp/astro-marp.git"
  },
  "license": "MIT",
  "author": "Jennings Liu"
}
