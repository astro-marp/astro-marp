---
export interface Props {
  virtualModuleId: string;
}

const { virtualModuleId } = Astro.props;

// Import the virtual module
const marpModule = await import(virtualModuleId);
const { html, meta } = marpModule;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />
  <title>{meta.title}</title>

  <!-- Marp presentation styles -->
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .marp-page {
      width: 100%;
      height: 100vh;
      overflow: hidden;
    }

    .marp-error {
      padding: 2rem;
      background: #fee;
      border: 1px solid #fcc;
      border-radius: 8px;
      margin: 2rem;
      font-family: monospace;
    }

    .marp-error h1 {
      color: #c00;
      margin-top: 0;
    }
  </style>
</head>
<body>
  <div class="marp-page">
    <div set:html={html} />
  </div>
</body>
</html>